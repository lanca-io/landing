.contact-form {
	display: flex;
	flex-direction: column;
	padding: var(--space-1) var(--space-1) var(--space-1) var(--space-1);
	gap: var(--space-4);
}

.contact-info__elem {
	display: flex;
	flex-direction: column;
	width: 100%;
	gap: var(--space-2);

	p {
		color: var(--color-grey-700);
	}
}

.error {
	display: flex;
	align-items: center;
	gap: var(--space-1);
	margin-top: -5px;
	p {
		color: var(--color-danger-700);
		font-size: 14px;
		line-height: 20px;
	}
}
