.benefit-panel {
	display: flex;
	flex-direction: column;
	gap: var(--space-6);
	width: 100%;
}

.benefit-panel__heading {
	display: flex;
	flex-direction: column;
	gap: var(--space-2);
}

.benefit-panel__subtitle {
	width: 100%;
	max-width: 65.8%;
}

@media (min-width: 1280px) {
	.benefit-panel__subtitle {
		width: 100%;
		max-width: 595px;
	}
}

@media (max-width: 992px) {
	.benefit-panel {
		width: 100%;
	}
	.benefit-panel__subtitle {
		max-width: 431px;
	}
}
