.benefit-panel {
	display: flex;
	flex-direction: column;
	gap: var(--space-4);
	max-width: 596px;
}

.benefit-panel__heading {
	display: flex;
	flex-direction: column;
	gap: var(--space-2);
}

.benefit-panel__subtitle {
	max-width: 389px;
}

@media (max-width: 992px) {
	.benefit-panel {
		max-width: 100%;
		width: 100%;
	}
}
