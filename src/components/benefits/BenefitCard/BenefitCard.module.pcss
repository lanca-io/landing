.benefit-card {
	display: flex;
	flex-direction: row;
	gap: var(--space-5);
	width: 100%;
}

.benefit-card__imageContainer {
	display: flex;
	justify-content: center;
	align-items: center;
	border-radius: var(--space-6);
	background: var(--color-grey-50);
	gap: 10px;
	width: 211px;
	height: 211px;
	flex-shrink: 0;
}

.benefit-card__heading {
	display: flex;
	gap: var(--space-2);
}

.benefit-card__image {
	width: 135px;
	height: auto;
}

.benefit-card__content {
	display: flex;
	flex-direction: column;
	gap: var(--space-3);
	width: 100%;
	flex-grow: 1;
}

.benefit-card__description {
	display: flex;
	flex-direction: column;
	gap: var(--space-2);
}

.benefit-card__tags {
	display: flex;
	gap: var(--space-2);
}

@media (max-width: 1280px) {
	.benefit-card__content {
		width: 40%;
	}
}

@media (max-width: 480px) {
	.benefit-card {
		flex-direction: column;
		gap: var(--space-5);
	}

	.benefit-card__content {
		width: 100%;
	}

	.benefit-card__imageContainer {
		display: flex;
		justify-content: center;
		align-items: center;
		border-radius: var(--space-6);
		background: var(--color-grey-50);
		min-width: 100%;
	}
}
