.integration {
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: var(--space-8);
	gap: var(--space-8);
	margin: 0 auto;
	max-width: 600px;
	justify-content: center;
}

@media (max-width: 480px) {
	.integration {
		padding: var(--space-7) var(--space-4);
		gap: var(--space-6);
	}
}
